@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;

<h1 class="jumbotron">Patients</h1>

<div>
  @if (@Model.Count == 0)
  {
    <h3>No Patients have been added yet!</h3>
  } 
  else
  {
    List<Patient> patientOrderList = new List<Patient>();
    @foreach (Patient patient in Model)
    {
      patientOrderList.Add(patient);
    }
    List<Patient> SortedList = patientOrderList.OrderBy(patient => patient.BirthDate).ToList();
  <ul class="row">
  @foreach (Patient p in SortedList)
  {
    <li id="patient">@Html.ActionLink($"{p.Name}", "Details", new { id = p.PatientId }) | Birth Date: @p.BirthDate</li><br>
  }
  </ul>
  }
</div>
<p class="btn btn-dark">@Html.ActionLink("Create a new Patient", "Create")</p>
