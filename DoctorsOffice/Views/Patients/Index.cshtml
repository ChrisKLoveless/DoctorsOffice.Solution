@{
  Layout = "_Layout";
}

@using DoctorsOffice.Models;

<h1 class="jumbotron">Patients</h1>

@if (@Model.Count == 0)
{
  <h3>No Patients have been added yet!</h3>
} 

@foreach (Patient patient in Model)
{
  <li>@Html.ActionLink($"{patient.Name}", "Details", new { id = patient.PatientId })</li><br>
}

<p>@Html.ActionLink("Create a new Patient", "Create")</p>
