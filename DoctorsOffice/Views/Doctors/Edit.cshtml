@{
    Layout = "_Layout";
}

@model DoctorsOffice.Models.Doctor;


<h2>Edit</h2>

<h4> Edit this doctor: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.DoctorId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)<br>

    @Html.LabelFor(model => model.Specialty)
    @Html.EditorFor(Model => Model.Specialty)<br>

    <br>

    <input type="submit" value="Save" class="btn btn-dark" />
}

<p class="btn btn-dark" id="link">@Html.ActionLink("Back to list of Doctors", "Index")</p>




